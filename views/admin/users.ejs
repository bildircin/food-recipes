<script>
    $(document).ready(function(){
        var table = $('#item_list').DataTable({
            searchDelay: 500,
            processing: true,
            serverSide: true,
            ajax: '/admin/kullanicilarAjax',
            'aaSorting' : [],
            'columns' : [
                { data : 'user_id' },
                { data : 'user_name' },
                { data : 'user_user_name' },
                { data : 'user_email' },
                { data : 'user_role' },
                { data : 'user_active' },
                { data : 'user_action' }
            ],
            columnDefs:[
                {
                    targets:6,
                    orderable: false,
                    render: function(data, type, row){

                        console.log(row)
                        return `<div class="d-flex">
                                    <a href="/admin/kullanici-guncelle/${row[0]}" class="btn btn-sm btn-icon btn-secondary">
